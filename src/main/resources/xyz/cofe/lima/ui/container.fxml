<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Accordion maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="xyz.cofe.lima.ui.ContainerController">
  <panes>
    <TitledPane animated="false" text="inspect">
      <content>
          <BorderPane style="-fx-padding: 0;">
              <center>
                <TreeTableView fx:id="treeTable">
                  <columns>
                    <TreeTableColumn text="C1" />
                    <TreeTableColumn text="C2" />
                  </columns>
                   <columnResizePolicy>
                      <TreeTableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                   </columnResizePolicy>
                </TreeTableView>
              </center>
              <top>
                  <ToolBar>
                      <Button mnemonicParsing="false" onAction="#refreshInspect" text="refresh"/>
                  </ToolBar>
              </top>
          </BorderPane>
      </content>
    </TitledPane>
    <TitledPane animated="false" text="logs stdout">
      <content>
            <BorderPane style="-fx-padding: 0;">
               <center>
                  <TextArea fx:id="logsStdOut">
                     <font>
                        <Font name="Monospaced Regular" size="13.0" />
                     </font>
                  </TextArea>
               </center>
               <top>
                  <ToolBar>
                    <items>
                      <Button mnemonicParsing="false" onAction="#refreshLogsStdOut" text="refresh" />
                    </items>
                  </ToolBar>
               </top>
            </BorderPane>
      </content>
    </TitledPane>
      <TitledPane animated="false" text="logs stderr">
         <content>
            <BorderPane style="-fx-padding: 0;">
               <center>
                  <TextArea fx:id="logsStdErr">
                      <font>
                          <Font name="Monospaced Regular" size="13.0" />
                      </font>
                  </TextArea>
               </center>
               <top>
                  <ToolBar>
                    <items>
                      <Button mnemonicParsing="false" onAction="#refreshLogsStdErr" text="refresh" />
                    </items>
                  </ToolBar>
               </top>
            </BorderPane>
         </content>
      </TitledPane>
      <TitledPane animated="false" text="modify">
        <content>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <TextField fx:id="newName" />
                  <Button mnemonicParsing="false" onAction="#rename" text="Rename" GridPane.columnIndex="1">
                     <GridPane.margin>
                        <Insets left="5.0" />
                     </GridPane.margin></Button>
                  <Button mnemonicParsing="false" onAction="#delete" text="Delete" textFill="#8a0000" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets left="5.0" />
                     </GridPane.margin>
                  </Button>
               </children>
            </GridPane>
        </content>
      </TitledPane>
  </panes>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</Accordion>
